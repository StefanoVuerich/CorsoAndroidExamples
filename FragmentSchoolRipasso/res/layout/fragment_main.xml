<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.fragmentschoolripasso.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/etichettaRisultato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonPiu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+" 
        android:paddingTop="15dp"
        android:paddingBottom="15dp"  />

    <Button
        android:id="@+id/buttonMeno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-" 
        android:paddingTop="15dp"
        android:paddingBottom="15dp"  />

    <Button
        android:id="@+id/inviaValore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="15dp"
        android:paddingBottom="15dp"  
        android:text="Invia valore" />

    <Button
        android:id="@+id/inviaValore2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invia valore 2" 
        android:paddingTop="15dp"
        android:paddingBottom="15dp"  />

</LinearLayout>